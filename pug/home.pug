extends core/base.pug

block title 
  title Главная

block content

  .page 

    include core/header.pug

    .content 

      // welcome
      section.welcome.section
        .container 
          .welcome__content 
            h1.welcome__title Разработка цифровых сервисов в помощь вашему бизнесу
            p.welcome__text Мы предлагаем широкий спектр решений для надежного ускорения работы вашей компании.
            .welcome__btn 
              button.btn.btn--orange обратится за консультацией
          .welcome__img 
            img(src="img/welcome.jpg", alt="")
      // /welcome

      // statistics
      .statistics.section
        .container 
          .statistics__items
            .row 
              .col-md-4 
                .statistics__item
                  .statistics__num 1,5 млн
                  .statistics__text Человек уже использует систему Ritos в своей ежедневной работе
              .col-md-4 
                .statistics__item
                  .statistics__num 
                    span.count-number(data-duration="3000" data-val-up="0" data-val-to="10") 10 
                    | &#160;лет
                  .statistics__text Наша система успешно работает в МЛМ-индустрии
              .col-md-4 
                .statistics__item
                  .statistics__num ~
                    span.count-number(data-duration="4000" data-val-up="0" data-val-to="14") 14 
                    | &#160;дней
                  .statistics__text Средний срок внедрения системы с вашим маркетинг-планом
      // /statistics

      // services
      section.services.section
        .container
          h2.title Что мы предлагаем:
          .services__items 
            .row.gy-3
              .col-lg-4.col-md-6 
                .services__item 
                  .services__icon 
                    img(src="img/magnifier.svg", alt="")
                  h3.services__title Консалтинг
                  ul.services__list
                    li Помощь в развертывании IT-проектов
                    li Экспертная помощь в проектировании и разработке IT-систем
              .col-lg-4.col-md-6 
                .services__item 
                  .services__icon 
                    img(src="img/services-icons/blob.svg", alt="")
                  h3.services__title МЛМ-проекты
                  ul.services__list
                    li Личные кабинеты МЛМ-компании
                    li Создание МЛМ сайтов
                    li Мобильные приложения МЛМ-компаний
                    li Разработка маркетинг-плана
                    li Аудит маркетинг-плана
              .col-lg-4.col-md-6 
                .services__item 
                  .services__icon 
                    img(src="img/services-icons/network.svg", alt="")
                  h3.services__title Разработка платформ
                  ul.services__list
                    li Инвестиционные платформы
                    li Образовательные платформы
                    li Платежные системы
              .col-lg-4.col-md-6 
                .services__item 
                  .services__icon 
                    img(src="img/services-icons/phones.svg", alt="")
                  h3.services__title Разработка блокчейн-приложений
                  ul.services__list
                    li Запуск криптовалюты на популярных экосистемах
                    li Создание криптовалюты с собственным блокчейном
                    li Разработка децентрализованных приложений
              .col-lg-4.col-md-6 
                .services__item 
                  .services__icon 
                    img(src="img/services-icons/phone.svg", alt="")
                  h3.services__title Разработка мобильных приложений
                  ul.services__list
                    li Разработка приложений под IOS и Android
              .col-lg-4.col-md-6 
                .services__item 
                  .services__img 
                    img(src="img/services-icons/services.jpg", alt="")
      // /services

      // team
      section.team.section
        .container 
          h2.title(data-aos="fade-up") Наша команда:
          .team__slider 
            #sliderTeam 
              .swiper-wrapper 
                .swiper-slide 
                  mixin team-item(img, title, text)
                    .team__item(data-aos="fade-up")
                      .team__img 
                        img(src= img, alt="")
                      h3.team__title= title
                      p.team__text= text
                  +team-item('img/team/img1.jpg','Андрей Пивоваров','Ведущий аналитик, бизнес-консультант, ')
                .swiper-slide 
                  +team-item('img/team/img2.jpg','Сергей гаврилов','Ведущий аналитик, бизнес-консультант, ')
                .swiper-slide 
                  +team-item('img/team/img3.jpg','Марк Семеницкий','Ведущий аналитик, бизнес-консультант, ')
                .swiper-slide 
                  +team-item('img/team/img4.jpg','Маргарита Смирнова','Ведущий аналитик, бизнес-консультант, ')
                .swiper-slide 
                  +team-item('img/team/img5.jpg','Вероника Иванова','Ведущий аналитик, бизнес-консультант, ')
                .swiper-slide 
                  +team-item('img/team/img6.jpg','Семен максимов','Ведущий аналитик, бизнес-консультант, ')
                .swiper-slide 
                  +team-item('img/team/img7.jpg','семён митрофанов','Ведущий аналитик, бизнес-консультант, ')
                .swiper-slide 
                  +team-item('img/team/img8.jpg','ирина семенова','Ведущий аналитик, бизнес-консультант, ')
                .swiper-slide 
                  +team-item('img/team/img9.jpg','марк воскресенский','Ведущий аналитик, бизнес-консультант, ')
      // /team

    include core/footer.pug
